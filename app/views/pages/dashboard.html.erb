<ul class="nav nav-tabs mb-4">
  <li class="nav-item nav-width">
    <a class="nav-link active text-white" data-bs-toggle="tab" href="#myeventsSection">MY EVENTS</a>
  </li>
  <li class="nav-item">
    <a class="nav-link text-white" data-bs-toggle="tab" href="#othereventsSection">PASSED EVENTS</a>
  </li>
  <li class="nav-item">
    <a class="nav-link text-white" data-bs-toggle="tab" href="#mygroupsSection">MY GROUPS</a>
  </li>
</ul>


<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-12">
      <div class="tab-content">

        <div class="tab-pane fade" id="mygroupsSection">
          <div class="groups">
            <div class="row">
              <% current_user.groups.each do |group| %>
                <% if group.user == current_user %>
                  <div class="col-md-4 mb-3">
                    <div class="card">
                      <div class="card-body">
                        <!-- Add some margin and padding to the card title -->
                        <h5 class="card-title" style="margin-bottom: 10px; padding-bottom: 10px; border-bottom: 1px solid #e0e0e0;"><%= group.name %></h5>
                        <div>
                          <strong><i class="fas fa-user"></i>  Members</strong>
                          <!-- Add some margin and padding to the member avatars -->
                          <div style="margin-top: 10px; padding: 5px;">
                            <% group.group_users.each do |group_user| %>
                              <% if group_user.user.photo.attached? %>
                                <%= cl_image_tag group_user.user.photo.key, class: "avatar" %>
                                <!-- Uncomment the following line to show the member names -->
                                <%# <span> <%= group_user.user.first_name %>
                              <% end %>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>

          <%= link_to "Add Group", new_group_path, class: "btn custom-btn mb-2"%>
        </div>

        <div class="tab-pane fade show active" id="myeventsSection">
          <ul class="nav nav-tabs" id="myEventsTabs" role="tablist">
            <!-- Add your sub-tab buttons here -->
            <li class="nav-item" role="presentation">
              <button class="nav-link active text-white" id="created-tab" data-bs-toggle="tab" data-bs-target="#createdSection" type="button" role="tab" aria-controls="createdSection" aria-selected="true">Created</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link text-white" id="voted-tab" data-bs-toggle="tab" data-bs-target="#votedSection" type="button" role="tab" aria-controls="votedSection" aria-selected="false">Voted</button>
            </li>
          </ul>

          <div class="tab-content mt-3" id="myEventsTabsContent">
            <!-- Add the corresponding events tables here -->
            <div class="tab-pane fade show active" id="createdSection" role="tabpanel" aria-labelledby="created-tab">
              <%= render 'events/index', events: @created_events %>
            </div>
            <div class="tab-pane fade" id="votedSection" role="tabpanel" aria-labelledby="voted-tab">
              <%= render 'events/index', events: @voted_events %>
            </div>
          </div>
        </div>

        <div class="tab-pane fade" id="othereventsSection">
          <%= render 'events/index', events: @passed_events %>
        </div>

      </div>
    </div>
  </div>
</div>
